{
  "name": "meeting-transcript-mvp",
  "version": "1.0.0",
  "description": "Real-time multilingual meeting assistant with transcription and translation",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "test": "echo \"No tests yet\" && exit 0"
  },
  "keywords": [
    "electron",
    "transcription",
    "translation",
    "meeting",
    "multilingual"
  ],
  "author": "Meeting Assistant MVP",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {
    "@google/genai": "^1.4.0",
    "dotenv": "^16.0.0",
    "ws": "^8.16.0"
  },
  "build": {
    "appId": "com.meetingassistant.mvp",
    "productName": "Meeting Assistant MVP",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "target": "dmg"
    }
  }
}
